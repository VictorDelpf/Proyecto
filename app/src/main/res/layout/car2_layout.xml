<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="140dp"
        tools:layout_editor_absoluteY="-229dp">

        <TextView
            android:id="@+id/carBrandTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="40dp"
            android:text="Marca"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/carPlateTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Matricula"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="@+id/carBrandTV"
            app:layout_constraintTop_toBottomOf="@+id/carBrandTV" />

        <TextView
            android:id="@+id/carModelTV"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="120dp"
            android:text="Modelo"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/carBrandTV"
            app:layout_constraintTop_toTopOf="@+id/carBrandTV" />

        <TextView
            android:id="@+id/carYearTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AÃ±o"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/carPlateTV"
            app:layout_constraintStart_toStartOf="@+id/carModelTV"
            app:layout_constraintTop_toTopOf="@+id/carPlateTV" />

        <Button
            android:id="@+id/compraButton"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_marginTop="20dp"
            android:text="Comprar"
            app:iconTint="#2642CC"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/carYearTV"
            app:layout_constraintTop_toBottomOf="@+id/carPlateTV" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>